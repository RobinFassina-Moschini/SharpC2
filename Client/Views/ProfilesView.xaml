<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Client.ViewModels"
             x:Class="Client.Views.ProfilesView"
             x:DataType="viewModels:ProfilesViewModel"
             Title="">
    
    <StackLayout Padding="10"
                 Spacing="10">

        <Label Text="Profile"/>
        <Picker ItemsSource="{Binding ProfilePicker}" SelectedIndex="{Binding ProfileIndex}"/>

        <Editor Text="{Binding Yaml}" AutoSize="TextChanges"/>

        <HorizontalStackLayout Spacing="10">

            <Button Text="Create" Command="{Binding CreateCommand}"/>
            <Button Text="Save" Command="{Binding SaveCommand}"/>
            <Button Text="Delete" Command="{Binding DeleteCommand}"/>

        </HorizontalStackLayout>

    </StackLayout>
    
</ContentPage>