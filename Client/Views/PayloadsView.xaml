<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Client.ViewModels"
             x:Class="Client.Views.PayloadsView"
             x:DataType="viewModels:PayloadsViewModel"
             Title="">

    <StackLayout Padding="10"
                 Spacing="10">

        <Label Text="Handler"/>
        <Picker ItemsSource="{Binding HandlerPicker}" SelectedItem="{Binding SelectedHandler}"/>

        <Label Text="Format"/>
        <Picker ItemsSource="{Binding Formats}" SelectedItem="{Binding SelectedFormat}"/>

        <Label Text="Save to (absolute path)"/>
        <Entry Text="{Binding Location}"/>

        <StackLayout Orientation="Horizontal"
                     Padding="10"
                     Spacing="10">

            <Button Text="Create"
                    Command="{Binding GeneratePayloadCommand}"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}"/>

        </StackLayout>
    </StackLayout>

</ContentPage>